##
# Overrides /etc/resolv.conf and fills it with the nameservers which are in
# $nameservers. It also sets the search groups according to $searchGroups.
#
# Relies on $nameservers and $searchGroups.
## 
setupResolvConf() {
    echo -n "Setting nameservers in /etc/resolv.conf... "
    echo "# Automatically generated by iwizxp" > /etc/resolv.conf

    if [ -n "$searchGroups" ]; then
        echo "search $searchGroups" >> /etc/resolv.conf
    fi

    for nameserver in $nameservers; do
       echo "nameserver $nameserver" >> /etc/resolv.conf 
    done
    echo "Done."
}
